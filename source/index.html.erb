<% content_for :head do %>
  <title>A Simple Jquery Slideshow</title>
<% end %>
<!-- <h1>A Simple Jquery Slideshow</h1> -->
<section id="content" class="slideshow">
  <% 10.times do |i| %>
    <article class="slide">
      <div style="background-color:<%= data.slides.slides[i] %>;">
        <div class="caption">
          <p><%= data.slides.captions[i] %></p>
        </div>
      </div>
    </article>
  <% end %>
</section>

